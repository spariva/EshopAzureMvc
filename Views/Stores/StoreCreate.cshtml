@model Eshop.Models.Store

@{
    ViewData["Title"] = "StoreCreate";
}

<partial name="_Breadcrumb" />

<hr />
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h3 class="card-title mb-0 text-white">Create new store</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="StoreCreate" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Store Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Store Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter store name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Store Email -->
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter store email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Store Image -->
                        <div class="mb-4">
                            <label asp-for="Image" class="form-label fw-bold">Store Image</label>
                            <div class="row">
                                <div class="col-md-7">
                                    <input asp-for="Image" type="file" class="form-control" />
                                </div>
                            </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <!-- Store Category -->
                        <div class="mb-4">
                            <label asp-for="Category" class="form-label fw-bold">Category</label>
                            <input asp-for="Category" class="form-control form-control-lg" placeholder="Enter store category" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-lg btn-orange">
                                <i class="fas fa-save me-2"></i> Create store
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
